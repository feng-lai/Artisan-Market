<div class="template-404 page-width page-margin">
  <div class="template-404__content center">
    <h1 class="template-404__title">
      {{ 'templates.404.title' | t }}
    </h1>
    <p class="template-404__subtext">
      {{ 'templates.404.subtext' | t }}
    </p>
    <div class="template-404__search">
      <form action="{{ routes.search_url }}" method="get" role="search" class="search">
        <div class="field">
          <input
            class="search__input field__input"
            id="Search-In-Template"
            type="search"
            name="q"
            value="{{ search.terms | escape }}"
            placeholder="{{ 'general.search.search' | t }}"
          >
          <label class="field__label" for="Search-In-Template">{{ 'general.search.search' | t }}</label>
          <button type="submit" class="search__button field__button">
            {{ 'general.search.search' | t }}
          </button>
        </div>
      </form>
    </div>
    <div class="template-404__link">
      <a href="{{ routes.root_url }}" class="button">
        {{ 'general.continue_shopping' | t }}
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "404 page",
  "tag": "section",
  "class": "section"
}
{% endschema %}
