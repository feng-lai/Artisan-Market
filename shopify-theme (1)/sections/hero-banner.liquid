<style>
  .hero-banner {
    position: relative;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    text-align: center;
    overflow: hidden;
  }
  
  .hero-banner::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
    z-index: 1;
  }
  
  .hero-banner__content {
    position: relative;
    z-index: 2;
    max-width: 60rem;
    padding: 4rem 2rem;
  }
  
  .hero-banner__title {
    font-size: clamp(3rem, 5vw, 5rem);
    font-weight: 700;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }
  
  .hero-banner__subtitle {
    font-size: 1.8rem;
    margin-bottom: 3rem;
    line-height: 1.4;
    opacity: 0.9;
  }
  
  .hero-banner__button {
    display: inline-block;
    background-color: white;
    color: #333;
    padding: 1.5rem 3rem;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.4rem;
    text-transform: uppercase;
    letter-spacing: 0.1rem;
    border-radius: 5px;
    transition: all 0.3s ease;
    border: 2px solid white;
  }
  
  .hero-banner__button:hover {
    background-color: transparent;
    color: white;
  }
  
  @media screen and (max-width: 749px) {
    .hero-banner {
      min-height: 50vh;
    }
    
    .hero-banner__content {
      padding: 3rem 1.5rem;
    }
    
    .hero-banner__subtitle {
      font-size: 1.6rem;
    }
  }
</style>

<section class="hero-banner">
  <div class="hero-banner__content">
    <h1 class="hero-banner__title">{{ section.settings.title | default: "Handcrafted with Love" }}</h1>
    <p class="hero-banner__subtitle">{{ section.settings.subtitle | default: "Discover unique artisanal products made by skilled craftspeople" }}</p>
    <a href="{{ section.settings.button_link | default: routes.collections_url }}" class="hero-banner__button">
      {{ section.settings.button_text | default: "Shop Collection" }}
    </a>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Handcrafted with Love"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Discover unique artisanal products made by skilled craftspeople"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
